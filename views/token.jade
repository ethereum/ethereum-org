extends layout

block vars
  - var title='Create a cryptocurrency contract in Ethereum'
  - var url='token'
  - var image='token'

block content
  include mixins/recipes.jade
  div.breadcrumb.animateme(data-when="enter", data-from="1", data-to="0.8", data-opacity="0", data-translatey="-20")
    a(href="/").index Ethereum 
    strong Â»  Create your own crypto-currency
    a(href="/crowdsale").next Next

  div#tutorial-start.main-tutorial.token-tutorial.inner-header.inner-page.even
    div.container
      div.row
        div.col-md-6.tutorial.scrollme
          +tokenFigureExit

        div.col-md-6.tutorial.scrollme          
          div.header-title
            h3.animateme(data-when="exit", data-from="0", data-to="0.5", data-translatey="200", data-opacity="0", data-easing="linear") Create your own  
            h2.animateme(data-when="exit", data-from="0", data-to="1", data-translatey="400", data-easing="linear") crypto-currency
            h3.animateme(data-when="exit", data-from="0", data-to="0.5", data-translatey="200", data-opacity="0", data-easing="linear") with Ethereum
          

  div.main-tutorial.inner-tutorial
    div.container
      div.row.scrollme                
        +toc
        div.col-md-12
          include:md content/token.md

  div.main-tutorial.even
    div.container
      div.row
        div.col-md-12.tutorial
          +crowdsaleRecipe("What's next?")

  
  script
    |  ((window.gitter = {}).chat = {}).options = {
    |    room: 'ethereum/tutorials'
    |  };

  script(src="https://sidecar.gitter.im/dist/sidecar.v1.js", async, defer)


