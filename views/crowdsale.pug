extends layout

block vars
  - var title='Create a crowdsale contract in Ethereum'
  - var url='crowdsale'
  - var image='crowdsale'

block content
  include mixins/recipes.pug

  .breadcrumb.animateme(data-when="enter", data-from="1", data-to="0.8", data-opacity="0", data-translatey="-20")
    a(href="/").index Ethereum
    strong Â»  Create a crowdsale
    a(href="/token").previous Previous
    a(href="/dao").next Next

  div#tutorial-start.main-tutorial.crowdsale-tutorial.inner-header.inner-page.even
    .container
      .row
        .col-md-6.tutorial.scrollme
          +crowdsaleFigureExit

        .col-md-6.tutorial.scrollme
          .header-title
            h2.animateme(data-when="exit", data-from="0", data-to="1", data-translatey="400", data-easing="linear") Crowdsale
            h3.animateme(data-when="exit", data-from="0", data-to="0.5", data-translatey="200", data-opacity="0", data-easing="linear") Raising funds from friends without a third party

  .main-tutorial.inner-tutorial
    .container
      .row.scrollme
        +toc
        .col-md-12
          include:markdown-it(plugins=['markdown-it-include']) content/crowdsale.md
          a.button.small(href='https://github.com/ethereum/ethereum-org/edit/master/views/content/crowdsale.md') Improve this page

  .main-tutorial.even
    .container
      .row
        .col-md-12.tutorial
          +daoRecipe("What's next?")


  script
    |  ((window.gitter = {}).chat = {}).options = {
    |    room: 'ethereum/tutorials'
    |  };

  script(src="https://sidecar.gitter.im/dist/sidecar.v1.js", async, defer)
